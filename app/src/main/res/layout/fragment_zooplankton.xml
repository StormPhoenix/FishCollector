<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.stormphoenix.fishcollector.mvp.model.beans.Zooplankton" />

        <variable
            name="zooplanktopBean"
            type="Zooplankton" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_zooplankton_mount_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="ind.L"
                    android:textSize="20sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_zooplankton_mount_unit">

                    <EditText
                        android:id="@+id/et_zooplankton_mount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/nums"
                        android:singleLine="true"
                        android:text="@{String.valueOf(zooplanktopBean.quality)}" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_zooplankton_biomass_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="mg/L"
                    android:textSize="20sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_zooplankton_biomass_unit">

                    <EditText
                        android:id="@+id/et_zooplankton_biomass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/create_mount"
                        android:singleLine="true"
                        android:text="@{String.valueOf(zooplanktopBean.biomass)}" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <GridLayout
                android:id="@+id/zoo_add_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:columnCount="4"></GridLayout>
        </LinearLayout>
    </ScrollView>
</layout>